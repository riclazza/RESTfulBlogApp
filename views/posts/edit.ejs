<% include ../partials/header %>

<div class="mt-5 container-fluid row justify-content-center">
  <div class="col-md-12 text-center">
    <h1>Edit : <%= post.title %></h1>
  </div>
  <div class="border col-sm-6 col-md-6 col-lg-4 col-xl-4">
    <form action="/posts/<%=post._id%>?_method=PUT" method="POST">
      <div class="form-group">
        <label>Title</label>
        <input
          class="form-control"
          type="text"
          name="post[title]"
          value="<%= post.title %>"
        />
      </div>
      <div class="form-group">
        <label>Image</label>
        <input
          class="form-control"
          type="text"
          name="post[image]"
          value="<%= post.image %>"
        />
      </div>
      <div class="form-group">
        <label>Content</label>
        <textarea class="form-control" name="post[body]" rows="8" required>
            <%= post.body %>
        </textarea>
      </div>
      <div class="text-center">
        <button class="btn btn-primary" type="submit">Edit the post</button>
      </div>
    </form>
  </div>
</div>
<% include ../partials/footer %>
